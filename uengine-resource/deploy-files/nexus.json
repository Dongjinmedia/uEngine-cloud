{
  "id": "/uengine-nexus",
  "backoffFactor": 1.15,
  "backoffSeconds": 1,
  "constraints": [
    [
      "hostname",
      "LIKE",
      "@nexus.ip@"
    ]
  ],
  "container": {
    "portMappings": [
      {
        "containerPort": 8081,
        "hostPort": 0,
        "protocol": "tcp",
        "servicePort": 10007
      }
    ],
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/sonatype-work",
        "hostPath": "/nexus-data",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "@host.registry.package@/nexus:2.14.6-02",
      "forcePullImage": false,
      "privileged": false,
      "parameters": [
        { "key": "rm", "value": "true" }
      ]
    }
  },
  "cpus": 0.3,
  "disk": 0,
  "env": {
    "MAX_HEAP": "512m"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "protocol": "COMMAND",
      "command": {
        "value": "pwd"
      }
    }
  ],
  "instances": 1,
  "labels": {
    "HAPROXY_GROUP": "external,internal",
    "HAPROXY_0_MODE": "tcp"
  },
  "maxLaunchDelaySeconds": 3600,
  "mem": 512,
  "gpus": 0,
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "requirePorts": false,
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 1
  },
  "killSelection": "YOUNGEST_FIRST",
  "unreachableStrategy": {
    "inactiveAfterSeconds": 0,
    "expungeAfterSeconds": 0
  },
  "fetch": [],
  "args": [
    "--character-set-server",
    "utf8",
    "--collation-server",
    "utf8_unicode_ci"
  ]
}